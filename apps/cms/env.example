# CMS Server Configuration
PORT=3010

# Frontend Website URL (for CORS)
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3010/api

# Database (PostgreSQL with Prisma)
DATABASE_URL="your_postgresql_database_url_here"

# Vercel Blob Storage (for media uploads)
BLOB_READ_WRITE_TOKEN="your_vercel_blob_token_here"
NEXT_PUBLIC_BLOB_STORE_URL="your_blob_store_url_here"

# Authentication (NextAuth.js)
NEXTAUTH_SECRET="change_this_to_a_secure_random_string_min_32_chars"
NEXTAUTH_URL=http://localhost:3010

# Development
NODE_ENV=development

# Translation API (optional - for auto-translation feature)
# DEEPL_API_KEY=your_deepl_api_key_here
# GOOGLE_TRANSLATE_API_KEY=your_google_translate_key_here
