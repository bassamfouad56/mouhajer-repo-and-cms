# Database
DATABASE_URL="your-postgresql-database-url"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Groq API for AI Translation (Free tier: https://console.groq.com)
# Get your API key at: https://console.groq.com/keys
GROQ_API_KEY="your-groq-api-key-here"

# Email Configuration (Required for form notifications)
# For Gmail: Use an App Password (Google Account → Security → 2-Step Verification → App passwords)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@mouhajerdesign.com"

